<tiles-definitions>
	<!-- 템플릿등록 -->
	<definition name="indexTemplate"
		template="/WEB-INF/layout/index.jsp">
		<put-attribute name="content"
			value="/WEB-INF/include/content.jsp" />
		<put-attribute name="top"
			value="/WEB-INF/include/top.jsp" />
		<put-attribute name="footer"
			value="/WEB-INF/include/footer.jsp" />
	</definition>
	

	<!-- 뷰등록 -->
	<definition name="index" extends="indexTemplate">
	</definition>

	<definition name="search" extends="indexTemplate">
		<put-attribute name="content"
			value="/WEB-INF/main/search.jsp" />
	</definition>

	<definition name="board" extends="indexTemplate">
		<put-attribute name="content"
			value="/WEB-INF/board/board.jsp" />
	</definition>

	<definition name="product" extends="indexTemplate">
		<put-attribute name="content"
			value="/WEB-INF/product/productList.jsp" />
	</definition>
	<definition name="campingList" extends="indexTemplate">
		<put-attribute name="content"
			value="/WEB-INF/camping/campingList.jsp" />
	</definition>
	<definition name="login" extends="indexTemplate">
		<put-attribute name="content" value="/WEB-INF/main/login.jsp"/>
	</definition>
	<definition name="main/register" extends="indexTemplate">
		<put-attribute name="content" value="/WEB-INF/main/register.jsp"/>
	</definition>
	<definition name="servicecenter" extends="indexTemplate">
		<put-attribute name="content" value="/WEB-INF/main/servicecenter.jsp"/>
	</definition>
	<definition name="notice" extends="indexTemplate">
		<put-attribute name="content" value="/WEB-INF/service/notice.jsp"/>
	</definition>
	
	<definition name="product/product_read" extends="indexTemplate">
		<put-attribute name
		="content" value="/WEB-INF/product/product_read.jsp"/>
	</definition>
	
	<definition name="test/campread" extends="indexTemplate">
	<put-attribute name
	="content" value="/WEB-INF/reservation/camp_read.jsp"/>
	</definition>
</tiles-definitions>